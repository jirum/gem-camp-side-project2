<style>
    .card {
        margin: 0 auto;
        float: none;
        margin-top: 70px;
    }
</style>

<div class="card w-50 border-0">
  <div class="row">
    <div class="col">
      <%= link_to "Back", users_profile_path, class: 'btn btn-primary form-control' if current_user %>
    </div>
    <div class="col">
      <%= link_to "Add New Address", new_users_address_path, class: 'btn btn-primary form-control' %>
    </div>
  </div>
</div>
<% unless current_user.addresses.present?%>
  <div class="card w-50 mt-3 text-center">
    <div class="card-body align-content-center">
      <div class="row">
        <p>Add Address!</p>
      </div>
    </div>
  </div>
  <% else %>
<% current_user.addresses.each do |add| %>
  <div class="card w-50 mt-3">
    <div class="card-body">
      <div class="row">
        <p class="alert"><%= alert %></p>
        <p><%= add.is_default == true ? 'Default ': ''%><%= add.genre%></p>
        <p>Name: <%= add.name %></p>
        <p>Phone Number: <%= add.phone_number %></p>
        <p>Street Address: <%= "#{add.street_address}, #{add.barangay.name}, #{add.city.name}, #{add.province.name}, #{add.region.name}" %></p>
        <p><%= link_to "Edit" ,edit_users_address_path(add), class:'btn btn-primary' if current_user %></p>
        <td><%= form_for add, url: users_address_path(add), method: :delete do |f| %>
            <%= f.submit 'Delete', class:'btn btn-danger'if current_user %>
          <% end %>
        </td>
      </div>
    </div>
  </div>
<% end %>
<% end %>
<%= render "users/shared/layout" %>