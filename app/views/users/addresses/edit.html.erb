<div class="container" style="width: 90vw; margin-top: 70px; max-width: 1220px">
  <div class="card shadow w-100 bg-light mx-auto">
    <div class="card-body">
      <div class="row">
        <div class="col">
          <%= link_to "Back", users_addresses_path, class: 'btn btn-primary form-control' if current_user %>
        </div>
        <div class="col"></div>
        <%= render 'errors/error', model: @address %>
        <%= form_for @address, url: users_address_path, method: :patch do |f| %>
          <%= render partial: 'form', locals: { f: f, address: @address } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render "users/shared/layout" %>