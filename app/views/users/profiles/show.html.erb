<div class="container" style="width:90vw; max-width:700px; margin-top: 70px">
  <%= render "errors/flash_error" %>
  <div class="card bg-light" style="font-family:'Baloo 2', cursive;">
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag current_user.image.thumb.url, class: 'd-flex justify-content-start w-100 rounded-circle' if current_user.image? %>
        </div>
        <div class="col-10">
          <p><%= "#{"Username: "}#{current_user.username}" %></p>
          <p><%= "#{"Email: "}#{current_user.email}" %></p>
          <p><%= "#{"Coins: "}#{current_user.coins}" %></p>
        </div>
        <div class="mb-3">
          <a href="#" class="btn btn-primary form-control">Cash in Now</a>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <%= link_to "Edit Profile", edit_user_registration_path, class: 'btn btn-primary form-control' %>
        </div>
        <div class="col">
          <%= link_to "Address", users_addresses_path, class: 'btn btn-primary form-control' %>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-3 mb-3">
    <%= link_to "Order History", users_profile_path(report: 'order'), class: 'd-inline btn btn-primary text-light' %>
    <%= link_to "Lottery History", users_profile_path(report: 'bet'), class: 'd-inline btn btn-primary text-light' %>
    <%= link_to "Invite History", users_profile_path(report: 'invite'), class: 'd-inline btn btn-primary text-light' %>
    <%= link_to "Winning History", users_profile_path(report: 'winner'), class: 'd-inline btn btn-primary text-light' %>
  </div>
  <% @orders&.each do |order| %>
    <div class="card border-info mt-3 mb-3 bg-light">
      <div class="card-body">
        <p>Serial Number: <%= order.serial_number %></p>
        <p>Amount: <%= order.amount %></p>
        <p>Coin: <%= order.coin %></p>
        <p>Created At: <%= order.created_at %></p>
        <p>State: <%= order.state %></p>
      </div>
    </div>
  <% end %>
  <% @bets&.each do |bet| %>
    <div class="card border-info mt-3 mb-3 bg-light">
      <div class="card-body">
        <p>Serial Number: <%= bet.serial_number %></p>
        <p>Item Name: <%= bet.item.name %></p>
        <p>Email: <%= bet.user.email %></p>
        <p>State: <%= bet.state %></p>
        <p>Created At: <%= bet.created_at %></p>
      </div>
    </div>
  <% end %>
  <% @winners&.each do |winner| %>
    <div class="card border-info mt-3 mb-3 bg-light">
      <div class="card-body">
        <p>Serial Number: <%= winner.bet.serial_number %></p>
        <p>Email: <%= winner.user.email %></p>
        <p>State: <%= winner.state %></p>
        <p>Created At: <%= winner.created_at %></p>
        <p><%= link_to 'Share', users_share_path(winner), class: 'btn btn-primary btn-sm me-3' if winner.delivered? %></p>
        <p><%= link_to 'Claim', users_winner_path(winner), class: 'btn btn-primary btn-sm' if winner.won? %></p>
      </div>
    </div>
  <% end %>
  <% @invitations&.each do |invitation| %>
    <div class="card border-info mt-3 mb-3 bg-light">
      <div class="card-body">
        <p>Username: <%= invitation.username %></p>
        <p>Email: <%= invitation.email %></p>
      </div>
    </div>
  <% end %>
</div>
<br><br><br>
<%= render "users/shared/layout" %>