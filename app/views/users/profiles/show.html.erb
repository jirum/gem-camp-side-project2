<style>
    .card {
        margin: 0 auto;
        float: none;
        margin-top: 70px;
    }
</style>

<div class="card w-50">
  <div class="card-body">
    <p><%= "#{"Username: "}#{current_user&.username}" %></p>
    <p><%= "#{"Email: "}#{current_user&.email}" %></p>
    <p><%= "#{"Coins: "}#{current_user&.coins}" %></p>

    <div class="mb-3">
      <a href="#" class="btn btn-primary form-control">Cash in Now</a>
    </div>
    <div class="row">
      <div class="col">
        <%= link_to "Edit Profile" ,edit_user_registration_path, class:'btn btn-primary form-control' if current_user %>
      </div>
      <div class="col">
        <%= link_to "Address", users_addresses_path, class:'btn btn-primary form-control' %>
      </div>
    </div>
  </div>
</div>
<%= render "users/shared/layout" %>


