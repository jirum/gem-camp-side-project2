<div class="form-group">
  <%= image_tag offer.image.thumb.url, class:'rounded mx-auto d-block' if offer.image?%>
  <%= f.label :image, class:'fs-6 mt-2' %>
  <%= f.file_field :image, class: 'form-control mt-2', placeholder: 'Image' %>
</div>
<div class="form-group">
  <%= f.text_field :name, class: 'form-control mt-3', placeholder: 'Name' %>
</div>
<div class="form-group">
  <%= f.select(:genre, Offer.genres.keys.map { |key| [key.humanize, key] }, { include_blank: 'Please Select Genre' }, { class: 'form-control mt-3' }) %>
</div>
<div class="form-group">
  <%= f.select(:status, Offer.statuses.keys.map { |key| [key.humanize, key] }, { include_blank: 'Please Select Status' }, { class: 'form-control mt-3' }) %>
</div>
<div class="form-group">
  <%= f.text_field :amount, class: 'form-control mt-3', placeholder: 'Amount' %>
</div>
<div class="form-group">
  <%= f.text_field :coin, class: 'form-control mt-3', placeholder: 'Coin' %>
</div>
<div class="form-group d-flex">
  <%= f.submit class: 'btn btn-primary mt-3 mx-auto' %>
</div>