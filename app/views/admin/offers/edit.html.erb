<div class="main">
  <div class="card w-50 bg-light" style="margin: 0 auto; float: none; margin-top: 35px; margin-bottom: 20px">
    <div class="card-body">
      <%= render 'errors/error', model: @offer %>
      <%= form_for @offer, url: admin_offer_path(@offer), method: :patch do |f| %>
        <%= render partial: 'form', locals: {f: f, offer: @offer} %>
      <% end %>
    </div>
  </div>
</div>