<div class="main">
  <div class="card w-50 bg-light" style="margin: 0 auto; float: none; margin-top: 70px;">
    <div class="card-body">
      <%= render 'errors/error', model: @offer %>
      <%= form_for @offer, url: admin_offers_path, method: :post do |f| %>
        <%= render partial: 'form', locals: {f: f, offer: @offer} %>
      <% end %>
    </div>
  </div>
</div>
