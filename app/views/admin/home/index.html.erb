    <div class="input-group">
      <button class="form-control">Change Language</button>
    </div>
  </form>
  <!-- Navbar-->
  <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Username</a>
      <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
        <li><a class="dropdown-item" href="#!">Profile</a></li>
        <li>
          <hr class="dropdown-divider"/>
        </li>
        <li><p class="dropdown-item"><%= link_to "LOGOUT", destroy_user_session_path, :method => :delete %></p></li>
      </ul>
    </li>
  </ul>
</nav>


<div class="sidenav">
