<div class="card-body">
  <div class="form-group">
    <%= f.text_area :content, class: 'form-control mt-3', placeholder: 'Name' %>
  </div>
  <div class="form-group">
    <%= f.select(:status, NewsTicker.statuses.keys.map { |key| [key.humanize, key] }, { include_blank: 'Please Select Status' }, { class: 'form-control mt-3' }) %>
  </div>
  <div class="form-group d-flex">
    <%= f.submit class: 'btn btn-primary mt-3 mx-auto' %>
  </div>
</div>