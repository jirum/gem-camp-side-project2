<div class="center w-75" style="margin: 50px auto">
  <div class="main">
    <div class="card mb-3">
      <div class="card-body">
        <%= form_tag({ url: admin_winners_path }, { method: :get }) do %>
          <div class="row">
            <div class="col-3">
              <%= label_tag :serial_number %>
              <%= text_field_tag :serial_number, params[:serial_number], class: "form-control" %>
            </div>
            <div class="col-3">
              <%= label_tag :email %>
              <%= text_field_tag :email, params[:email], class: "form-control" %>
            </div>
            <div class="col-3">
              <%= label_tag :state %>
              <%= select_tag :state, options_for_select(Winner.aasm.states.map(&:name), params[:state]), { prompt: 'state', class:"form-control form-select"}%>
            </div>
          </div>
          <div class="row mt-2">
            <%= label_tag :created_at %>
            <div class="col-6">
              <div class="input-group">
                <span class="input-group-text">From</span>
                <%= datetime_field_tag :start_date, params[:start_date], class: "form-control"%>
              </div>
            </div>
            <div class="col-6">
              <div class="input-group">
                <span class="input-group-text">To</span>
                <%= datetime_field_tag :end_date, params[:end_date], class: "form-control" %>
              </div>
            </div>
          </div>
          <%= submit_tag :Search, class: "btn btn-warning mt-3" %>
          <%= link_to 'Reset', admin_winners_path, class: "btn btn-info mt-3" %>
        <% end %>
      </div>
    </div>
    <%= render 'errors/flash_error' %>
    <table class="table table-dark table-striped text-center fs-6">
      <thead class="table-active">
      <tr>
        <th colspan="6">Winner List</th>
      </tr>
      <tr class="table-active">
        <th scope="col">Serial Number</th>
        <th scope="col">Email</th>
        <th scope="col">State</th>
        <th scope="col">Address</th>
        <th scope="col">Date Created</th>
        <th scope="col">Action</th>
      </tr>
      </thead>
      <% if @winners.blank? %>
        <td colspan="6">No Winner Found</td>
      <% end %>
      <tbody>
      <% @winners.each do |winner| %>
        <tr>
          <td><%= winner.bet.serial_number %></td>
          <td><%= winner.user.email %></td>
          <td><%= winner.state %></td>
          <td><%= concat_address(winner.user.addresses.find_by_is_default(true)) %></td>
          <td><%= winner.created_at %></td>
          <td><%= link_to 'Submit', admin_winner_submit_path(winner), class: 'btn btn-primary', method: :put if winner.may_submit? %>
            <%= link_to 'Pay', admin_winner_pay_path(winner), class: 'btn btn-primary', method: :put if winner.may_pay? %>
            <%= link_to 'Ship', admin_winner_ship_path(winner), class: 'btn btn-primary', method: :put if winner.may_ship? %>
            <%= link_to 'Deliver', admin_winner_deliver_path(winner), class: 'btn btn-primary', method: :put if winner.may_deliver? %>
            <%= link_to 'Publish', admin_winner_publish_path(winner), class: 'btn btn-primary', method: :put if winner.may_publish? %>
            <%= link_to 'Remove publish', admin_winner_remove_publish_path(winner), class: 'btn btn-primary', method: :put if winner.may_remove_publish? %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>