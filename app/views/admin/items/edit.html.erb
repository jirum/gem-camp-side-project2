<div class="main">
  <div class="card w-50 bg-light" style="margin: 0 auto; float: none; margin-top: 35px; margin-bottom: 20px">
    <div class="card-body">
      <%= render 'errors/error', model: @item %>
      <%= form_for @item, url: admin_item_path(@item), method: :patch do |f| %>
        <%= render partial: 'form', locals: {f: f, item: @item} %>
      <% end %>
    </div>
  </div>
</div>