<div class="center w-75" style="margin: 50px auto">
  <div class="main">
    <%= render 'errors/flash_error' %>
    <%= form_tag({ url: admin_items_path }, { method: :get }) do %>
      <div class="input-group">
        <div class="input-group-prepend">
          <%= link_to 'New', new_admin_item_path, class: "btn btn-success ml-auto" %>
        </div>
        <div class="input-group mb-3 ms-auto" style="width: 350px">
          <%= text_field_tag :name, params[:name], class: "form-control", placeholder: 'Name' %>
          <div class="input-group-append">
            <%= submit_tag :Search, class: "btn btn-warning" %>
            <%= link_to 'Reset', admin_items_path, class: 'btn btn-info' %>
          </div>
        </div>
      </div>
    <% end %>
    <table class="table table-dark table-striped text-center fs-6">
      <thead class="table-active">
      <tr>
        <th colspan="13">Item List</th>
      </tr>
      <tr>
        <th scope="col">Image</th>
        <th scope="col">Name</th>
        <th scope="col">Category</th>
        <th scope="col">Quantity</th>
        <th scope="col">Minimum Bets</th>
        <th scope="col">State</th>
        <th scope="col">Batch Count</th>
        <th scope="col">Online At</th>
        <th scope="col">Offline At</th>
        <th scope="col">Start At</th>
        <th scope="col">Status</th>
        <th colspan="2">Action</th>
      </tr>
      </thead>
      <% if @items.blank? %>
        <td colspan="12">No Item Found</td>
      <% end %>
      <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= image_tag item.image.thumb.url, class: "mx-auto d-block w-100 p-3" if item.image? %></td>
          <td><%= item.name %></td>
          <td><%= item.category.name %></td>
          <td><%= item.quantity %></td>
          <td><%= item.minimum_bets %></td>
          <td><%= item.state %></td>
          <td><%= item.batch_count %></td>
          <td><%= item.online_at %></td>
          <td><%= item.offline_at %></td>
          <td><%= item.start_at %></td>
          <td><%= item.status %></td>
          <td>
            <%= link_to "Edit", edit_admin_item_path(item), class: 'btn btn-primary' %>
          </td>
          <td>
            <%= link_to 'Delete', admin_item_path(item), method: :delete, class: 'btn btn-danger', style: "display: inline-block" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
