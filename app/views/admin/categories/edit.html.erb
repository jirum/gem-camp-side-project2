<div class="main">
  <div class="card w-50 bg-light" style="margin: 0 auto; float: none; margin-top: 70px;">
    <div class="card-body">
      <% if @category.errors.any? %>
        <% @category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>
      <%= form_for @category, url: admin_category_path(@category), method: :patch do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class: 'form-control mt-3', placeholder: 'Name' %>
        </div>
        <div class="form-group d-flex">
          <%= f.submit class: 'btn btn-primary mt-3 mx-auto' %>
        </div>
      <% end %>
    </div>
  </div>
</div>