<div class="center w-75" style="margin: 50px auto">
  <div class="main">
    <table class="table table-dark table-striped text-center fs-6">
      <th colspan="3">Category List</th>
      <tr class="table-active">
        <th scope="col">Name</th>
        <th>Action</th>
      </tr>
      </thead>
      <% unless @categories.exists? %>
        <td colspan="12">No Category Found</td>
      <% end %>
      <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td>
            <%= form_for category, url: admin_category_path(category), method: :delete do |f| %>
              <%= link_to "Edit", edit_admin_category_path(category), class: 'btn btn-primary' %>
                <%= f.submit 'Delete', class: 'btn btn-danger', style:"display: inline-block" %>
              </td>
            <% end %>
            </tr>
      <% end %>
      </tbody>
    </table>
    <%= link_to 'New', new_admin_category_path, class: "btn btn-primary"%>
  </div>
</div>