<div class="container" style="margin-top: 70px; max-width: 1220px">
  <% unless current_user %>
    <div class="text-center">
      <div class="card shadow bg-body rounded border-light mx-auto" style="width: 35%">
        <div class="card-body">
          <strong><p>You need to sign in first</p></strong>
        </div>
      </div>
    </div>
  <% end %>
  <div class="d-flex justify-content-center mt-3">
    <div class="card shadow mb-3 bg-body rounded border-light">
      <div class="card-body">
        <div class="img-fluid">
          <%== @svg %>
        </div>
      </div>
    </div>
  </div>
  <div class="card bg-light d-flex m-auto" style=" text-align: center; width: fit-content">
    <div id="link" class="text-dark" style="font-style: oblique; padding: 10px">
      <%= @url %>
    </div>
    <button onclick="copy_url()" type="button" class="btn btn-outline-info">Copy Link</button>
  </div>
</div>
<script>
    function copy_url() {
        const range = document.createRange();
        range.selectNode(document.getElementById("link"));
        window.getSelection().removeAllRanges();
        window.getSelection().addRange(range);
        document.execCommand("copy");
        window.getSelection().removeAllRanges();
    }
</script>
<%= render "users/shared/layout" %>