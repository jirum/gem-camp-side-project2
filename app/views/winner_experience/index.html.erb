<style xmlns="http://www.w3.org/1999/html">
    .marquee {
        overflow: hidden;
        background-color: #000;
    }
</style>
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner" style="height: 50vh">
    <div class="carousel-item active">
      <img src="la.jpeg" class="d-block mx-auto" alt="guitar">
    </div>
    <div class="carousel-item">
      <img src="ny.jpeg" class="d-block mx-auto" alt="drums">
    </div>
    <div class="carousel-item">
      <img src="chicago.jpeg" class="d-block mx-auto" alt="car">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<div class="marquee" data-controller="marquee">
  <div class="wrap wrap-padding">
    <ul id="marquee" class="marquee-list" data-marquee-target="marquee" style="padding-top: 7px; height: 25px">
      <marquee class="text-light"><h5 style=""> Announcement! </h5></marquee>
    </ul>
  </div>
</div>
<%= render 'errors/flash_error' %>
<div class="container" style="margin-bottom: 100px; max-width: 1220px">
  <h4 style="padding: 10px">Winners Feedback</h4>
  <% @winner_exp.each do |winner| %>
    <%= link_to winner_experience_path(winner), class: 'img-fluid text-decoration-none text-dark' do %>
      <div class="card w-100 mt-2 bg-light">
        <div class="card-body">
          <div class="row">
            <div class="col-4 col-sm-3 col-md-2 col-lg-2">
              <div class="w-100 overflow-hidden" style="aspect-ratio: 1 / 1">
                <%= image_tag winner.picture.thumb.url, class: 'img-responsive w-100 h-100', style: 'object-fit: cover;' if winner.picture? %>
              </div>
            </div>
            <div class="col">
              <p>Username: <%= winner.user.username %></p>
              <p>Comment: <%= winner.comment %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<%= render "users/shared/layout" %>