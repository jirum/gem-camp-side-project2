<style xmlns="http://www.w3.org/1999/html">
    .marquee {
        overflow: hidden;
        background-color: #000;
    }

    .category:active {
        background-color: yellow;
    }
</style>
<script>
    $(function () {
        $("#MenuBar a").bind("click", function () {
            $(this).addClass("clicked");
        });
    });
</script>
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner" style="height: 50vh">
    <div class="carousel-item active">
      <img src="la.jpeg" class="d-block mx-auto" alt="guitar">
    </div>
    <div class="carousel-item">
      <img src="ny.jpeg" class="d-block mx-auto" alt="drums">
    </div>
    <div class="carousel-item">
      <img src="chicago.jpeg" class="d-block mx-auto" alt="car">
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<div class="marquee" data-controller="marquee">
  <div class="wrap wrap-padding">
    <ul id="marquee" class="marquee-list" data-marquee-target="marquee" style="padding-top: 7px; height: 25px">
      <marquee class="text-light"><h5 style=""> Announcement! </h5></marquee>
    </ul>
  </div>
</div>
<div class="container" style="margin-bottom: 100px; margin-top: 20px">
  <div class="mb-3">
    <%= link_to 'All', lottery_index_path, class: "category link-info text-decoration-none mx-2" %>
    <% @categories.each do |category| %>
      <%= link_to category.name, lottery_index_path(category: category.name), class: "category link-info text-decoration-none mx-2" %>
    <% end %>
  </div>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-6 col-md-4 col-lg-3">
        <div class="card shadow-none border-none mb-3 overflow-hidden" style="max-height: 350px; height:20vw; min-height: 220px">
          <div class="overflow-hidden">
            <%= link_to (image_tag item.image.url, class:'card-img-top img-responsive' if item.image?), lottery_path(item) %>
          </div>
          <div class="card-footer flex-column mt-auto">
            <h6 class="text-start"><%= item.name %></h6>
            <div class="progress">
              <div class="progress-bar" role="progressbar" aria-label="Example with label" style="width: <%= progress(item) %>%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><%= progress(item) %>%</div>
            </div>
          </div>
        </div>
      </div>
      <br><br>
    <% end %>
  </div>
</div>
<%= render "users/shared/layout" %>